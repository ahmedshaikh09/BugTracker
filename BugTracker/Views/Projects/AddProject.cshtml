@model AddEditProjectsViewModel

@{
    ViewBag.Title = "AddProject";
}

<h2>Add Project</h2>

<form method="post" enctype="multipart/form-data">
    @Html.ValidationSummary(false)
    <div class="form-group">
        @Html.LabelFor(p => Model.Topic, "Project Topic:")
        @Html.TextBoxFor(p => Model.Topic, new { @class = "form-control", placeholder = "Project Topic" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => Model.Brief, "Brief:")
        @Html.TextAreaFor(p => Model.Brief, new { @class = "form-control", id = "body-field", placeholder = "Brief", rows = 5, columns = 5 })
    </div>
    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>