@{
    ViewBag.Title = "UserRoleUpdate";
}


<hr />

<h3>Roles for User</h3>

<form method="post" enctype="multipart/form-data">
    @foreach (var role in ViewBag.Roles)
    {
        foreach (var userrole in ViewBag.userRole)
        {
            if (role == userrole)
            {

                <input type="checkbox" value="@role" id="Roles" checked />@role
            }

            if (role != userrole)
            {
                <input type="checkbox" value="@role" id="Roles" />@role
            }
        }
    }
    <button type="submit" class="btn btn-default">Submit</button>
</form>